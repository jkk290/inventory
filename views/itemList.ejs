<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/category">View categories</a><br>
    <a href="/item/add">Add Item</a>
    <ul>
        <% items.forEach(item => { %>
            <li>Name: <%= item.name %>, Category: <%= item.category %>, Stock: <%= item.stock %> <a href="/item/<%= item.id %>/edit">Edit</a>
            <form action='/item/<%= item.id %>/delete' method='POST' style='display:inline;'>
            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
          </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>